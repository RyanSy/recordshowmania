<header id="link-header" class="d-flex justify-content-center py-3">
  <a class="nav-link" href="https://www.recordriots.com">
    <img class="img-fluid ml-3" height="70" width="70" src="{{host}}/images/record-riots-logo.png"
      alt="Record Riots">
  </a>

  <div class="ms-3">
    <a class="nav-link" href="https://www.groovycoasters.com">
        <img class="img-fluid" height="70" width="116" src="{{host}}/images/groovycoasters-logo.png"
        alt="Groovy Coasters">
    </a>
  </div>

  <form action="https://www.paypal.com/donate" method="post" target="_top">
    <input type="hidden" name="hosted_button_id" value="4J8RJ9KXFJDJ8" />
      <button class="btn" type="submit">
        <img class="img-fluid" height="70" width="145" src="{{host}}/images/donate-paypal.png"
          alt="Donate">
      </button>
  </form>
</header>

<header id="vinyl-steve-announcement-header" class="d-flex justify-content-center .justify-content-sm-evenly pt-3">
  <span><strong>Wanna sell at a Record Riot? Go to <a href="http://www.vinylsteve.com">vinylsteve.com</a> to register!</strong></span>
</header>

{{> nav}}

<div class="header">
  <div class="header-wrapper">
    <div class="text-center pt-5">
      <h1 id="header-message" class="header-message pt-5 pb-3">Looking for a record show?</h1>
    </div>
    {{> searchbox}}
  </div>
</div>

{{#if message}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{message}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
{{/if}}

<div class="container mt-5 mb-5">
  <h3 class="mt-5 mb-5">Upcoming Shows:</h3>
  {{#each shows}}
  <div class="show">
    <div class="mb-3 pl-1 pr-1 rounded">
      <div class="row">
        <div class="col-4 pl-2 pr-1">
          {{this.month}} {{this.day}}, {{this.year}}
        </div>
        <div class="col-8 pl-2">
          <form id="show-{{this.id}}" action="/{{this.name_formatted}}/{{this.date_og}}" method="post">
            <input type="hidden" name="id" value="{{this.id}}">
          </form>
          <a href="#" onclick="document.getElementById('show-{{this.id}}').submit(); return false;">{{this.name}}</a>
          <br>
          {{#if this.isInternational}}
          {{this.country}}
          {{else}}
          {{this.city}}, {{this.state}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<script src="javascripts/searchbox.js"></script>
<script src="javascripts/show-more.js"></script>
