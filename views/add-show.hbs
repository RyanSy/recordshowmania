      <label for="inputSavedShow">Saved Shows</label>
      <select class="form-control col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4" id="inputSavedShow" name="savedShow">
        <option value="">Select Show</option>
        {{#each savedShows}}
        <option value="{{this._id}}">{{this.name}}</option>
