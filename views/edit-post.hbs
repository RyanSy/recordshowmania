{{> nav}}

<div class="container px-5">
    <div class="text-center mt-5">
        <h1>Edit Blog Post</h1>
    </div>

    {{#blogPost}}
    <form class="container mt-5" action="/edit-blog-post" method="post">
        <input type="hidden" name="id" value="{{this._id}}">
        <input type="hidden" name="author" id="" placeholder="author" value="{{this.username}}">
        <input type="hidden" name="date_updated" id="date_updated">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="title" id="title" value="{{this.title}}">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" name="content" id="content" rows="25">{{this.content}}</textarea>
        </div>
        {{!-- <div id="imageUpload" class="form-group">
            <label for="inputImage">Image Upload</label>
            <input type="file" accept="image/*,.pdf" class="form-control-file" id="inputImage">
        </div> --}}
        <div class="form-group">
            <button class="btn btn-success mt-3" type="submit">Save Changes</button>
            <a href="/blog" class="btn btn-link mt-3">Cancel</a>
        </div>
    </form>
    {{/blogPost}}
</div>

<script>
    var dateNow = new Date();
    document.getElementById('date_updated').value = dateNow;
</script>