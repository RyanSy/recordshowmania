{{> nav}}

<div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            {{#if blogPosts}}
                <h2 class="post-title">Blog Posts</h2>
                <hr class="my-4" />
                {{#each blogPosts}}
                <!-- Post preview-->
                <div class="post-preview">
                    <a href="/blog-post/{{this._id}}">
                        <h3 class="post-title">{{this.title}}</h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#!">{{this.author}}</a>
                        on {{this.date_posted}}
                        {{#if this.date_updated}}
                        <br>
                        (Updated on {{this.date_updated}})
                        {{/if}}
                    </p>
                </div>
                <!-- Divider-->
                <hr class="my-4" />
                {{/each}}
            {{else}}
            <p>Still working on the it... check back later for updates!</p>
            {{/if}}
            <!-- Pager-->
            {{!-- <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older
                    Posts</a></div> --}}
        </div>
    </div>
</div>