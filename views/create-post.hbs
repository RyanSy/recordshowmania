<div class="container px-5">
    <div class="text-center mt-5">
        <h1>Create Blog Post</h1>
    </div>

    <form class="container mt-5" action="/create-blog-post" method="post">
        <input type="hidden" name="author" id="" placeholder="author" value="{{this.username}}">
        <input type="hidden" name="date_posted" id="date_posted">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Title" autofocus>
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" name="content" id="content" rows="25" placeholder="Content"></textarea>
        </div>
        {{!-- <div id="imageUpload" class="form-group">
            <label for="inputImage">Image Upload</label>
            <input type="file" accept="image/*,.pdf" class="form-control-file" id="inputImage">
        </div> --}}
        <div class="form-group">
            <button class="btn btn-success mt-3" type="submit">Add Post</button> 
            <a href="/" class="btn btn-link mt-3">Cancel</a>
        </div>
    </form>
</div>

<script>
    var dateNow = new Date().toDateString();
    document.getElementById('date_posted').value = dateNow;
</script>